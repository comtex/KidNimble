= form_for @counselor do |f|
  -if @counselor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@counselor.errors.count, "error")} prohibited this counselor from being saved:"
      %ul
        - @counselor.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.hidden_field :camp_id
    = f.label :user_id
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
