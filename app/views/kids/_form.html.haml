= form_for @kid do |f|
  -if @kid.errors.any?
    #error_explanation
      %h2= "#{pluralize(@kid.errors.count, "error")} prohibited this kid from being saved:"
      %ul
        - @kid.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :age
    = f.number_field :age
  .actions
    = f.submit 'Save'
