.fill
  .container
    %h3 #{link_to "KidNimble.com", root_path}
    %ul.nav.secondary-nav
      - if user_signed_in?
        %li #{link_to "Settings" , edit_user_registration_path }
        %li #{link_to "Logout", destroy_user_session_path , :method => :delete }
        %li= link_to "Help", "http://getsatisfaction.com/campgurus?fastpass=#{CGI.escape(FastPass.url(APP.satisfaction.consumer_key, APP.satisfaction.consumer_secret, current_user.email, current_user.name, current_user.id))}"
      - else
        %li #{link_to "Sign up", new_user_registration_path }
        %li #{link_to "Sign in", new_user_session_path }
        %li #{link_to "Facebook Sign in", user_omniauth_authorize_path(:facebook) }
