- if @camps.count > 2
  = gmaps("markers" => {"data" => @camps.to_gmaps4rails, "options" => {"custom_infowindow_class" => "yellow" } })
- else
  = gmaps("map_options" => { "auto_zoom" => false, "zoom" => 15}, "markers" => {"data" => @camps.to_gmaps4rails, "options" => {"custom_infowindow_class" => "yellow" } })
:javascript
  jQuery(document).ready(function ($) {
      Gmaps.map.infobox = function(boxText) {
      return {
         content: boxText
        ,disableAutoPan: false
        ,maxWidth: 0
        ,pixelOffset: new google.maps.Size(-60, 0)
        ,zIndex: 5000
        ,boxStyle: { 
          background: "url('http://google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.5/examples/tipbox.gif') no-repeat"
          ,opacity: 0.85
          ,width: 115
           }
        ,closeBoxMargin: "10px 2px 2px 2px"
        ,closeBoxURL: "http://www.google.com/intl/en_us/mapfiles/close.gif"
        ,infoBoxClearance: new google.maps.Size(1, 1)
        ,isHidden: false
        ,pane: "floatPane"
        ,enableEventPropagation: false
      }};
  });